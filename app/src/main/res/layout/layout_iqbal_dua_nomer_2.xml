<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@color/second_gray">

        <ImageView
            android:src="@drawable/img_kalkulator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
            android:background="@color/semi_black"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Mengonversi Cepat Aplikasi Kalkulator Normal menjadi kalkulator ilmiah ! "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_kalkulator"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradasii"
                    android:text="kalkulator" />

                <ImageView
                    android:id="@+id/im_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_kalkulator"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="12121K"
                    android:textColor="@color/white" />
            </RelativeLayout>
            <TextView
                android:text="Putar Telepon Secara Fisik Sehingga Orientasai layar menjadi horizontal alih-alih vertikal - hal ini akan mengubah kalkulator ke mode ilmiah, "
                android:textSize="20dp"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:text="Cobalah Sekarang"
                android:textSize="15dp"
                android:background="@drawable/bg_gradasii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
</LinearLayout>